{
	"name": "backend",
	"version": "1.0.0",
	"main": "index.js",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "tsc && tsc-alias",
		"start:prod": "node dist/main/index.js",
		"dev:server": "nodemon",
		"dev:console": "node -r tsconfig-paths/register -r sucrase/register src/main/index.ts",
		"test": "vitest",
		"test:run": "vitest run",
		"test:ui": "vitest --ui",
		"test:verbose": "vitest --reporter verbose",
		"biome-lint": "npx @biomejs/biome lint ./",
		"biome-lint-apply": "npx @biomejs/biome lint ./ --write",
		"biome-format": "npx @biomejs/biome format ./",
		"biome-format-apply": "npx @biomejs/biome format ./ --write",
		"biome-check": "npx @biomejs/biome check ./",
		"biome-check-apply": "npx @biomejs/biome check ./ --write"
	},
	"prisma": {
		"schema": "./src/main/infra/database/orm/prisma/schema.prisma"
	},
	"author": "",
	"license": "ISC",
	"description": "",
	"dependencies": {
		"@casl/ability": "^6.7.2",
		"@prisma/client": "^5.22.0",
		"bcrypt": "^5.1.1",
		"compression": "^1.7.5",
		"dotenv": "^16.4.5",
		"express": "^4.21.1",
		"helmet": "^8.0.0",
		"jsonwebtoken": "^9.0.2",
		"morgan": "^1.10.0",
		"winston": "^3.16.0",
		"zod": "^3.23.8",
		"zod-validation-error": "^3.4.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@faker-js/faker": "^9.2.0",
		"@types/bcrypt": "^5.0.2",
		"@types/compression": "^1.7.5",
		"@types/express": "^5.0.0",
		"@types/jsonwebtoken": "^9.0.7",
		"@types/morgan": "^1.9.9",
		"@types/node": "^22.9.0",
		"@types/supertest": "^6.0.2",
		"@types/winston": "^2.4.4",
		"@vitest/ui": "^2.1.4",
		"globals": "^15.12.0",
		"nodemon": "^3.1.7",
		"prisma": "^5.22.0",
		"rimraf": "^6.0.1",
		"sucrase": "^3.35.0",
		"supertest": "^7.0.0",
		"tsc-alias": "^1.8.10",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.6.3",
		"vitest": "^2.1.4",
		"vitest-mock-extended": "^2.0.2"
	}
}
