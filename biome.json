{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"indentStyle": "tab",
		"formatWithErrors": false,
		"attributePosition": "auto",
		"indentWidth": 2,
		"enabled": true,
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noExplicitAny": "off",
				"noMisleadingCharacterClass": "off"
			},

			"complexity": {
				"noStaticOnlyClass": "off"
			},
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "always",
			"arrowParentheses": "always",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded"
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	},
	"files": {
		"ignore": [".next/**/*", "components/ui/**/*"]
	}
}
